<div class="home jumbotron jumbotron-fluid text-center">
  <div class="overlay">
    <div class="movedown container">
        <div class="jumbo-text">
            <h1 class="display-3">MongoDB Scraper</h1>
            <p class="lead">Let's Scrape Articles from the New York Times!</p>
        </div>
    </div>
  </div>
</div>

{{!-- 
Scraped Articles --}}
<div class="container">
    <div class="row">
      <div class="col-xs-12 articles">

        {{#each doc}}

        <p><a href="{{this.link}}"><h2>{{this.headline}}</h2></a></p>
        <p>
          <h4>{{this.summary}}</h4></p>
        <hr> {{/each}}

      </div>
    </div>
</div>

